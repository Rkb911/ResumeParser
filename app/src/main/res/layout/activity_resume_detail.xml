<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeDetailActivity"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/nameParsed"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/phone"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/phoneParsed"
                app:layout_constraintTop_toBottomOf="@+id/nameParsed" />

            <TextView
                android:id="@+id/phoneParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/phone" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/emailParsed"
                app:layout_constraintTop_toBottomOf="@+id/phoneParsed" />

            <TextView
                android:id="@+id/emailParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/skills"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <TextView
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/skillsParsed"
                app:layout_constraintTop_toBottomOf="@+id/emailParsed" />

            <TextView
                android:id="@+id/skillsParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/designation"
                app:layout_constraintTop_toBottomOf="@+id/skills" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/designationParsed"
                app:layout_constraintTop_toBottomOf="@+id/skillsParsed" />

            <TextView
                android:id="@+id/designationParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/degree"
                app:layout_constraintTop_toBottomOf="@+id/designation" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Degree:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/degreeParsed"
                app:layout_constraintTop_toBottomOf="@+id/designationParsed" />

            <TextView
                android:id="@+id/degreeParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/college"
                app:layout_constraintTop_toBottomOf="@+id/degree" />

            <TextView
                android:id="@+id/college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/collegeParsed"
                app:layout_constraintTop_toBottomOf="@+id/degreeParsed" />

            <TextView
                android:id="@+id/collegeParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/experience"
                app:layout_constraintTop_toBottomOf="@+id/college" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience:"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/experienceParsed"
                app:layout_constraintTop_toBottomOf="@+id/collegeParsed" />

            <TextView
                android:id="@+id/experienceParsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/experience" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>